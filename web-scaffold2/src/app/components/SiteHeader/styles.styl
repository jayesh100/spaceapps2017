@import '~app/assets/stylus'


.root
  position: fixed
  width: 100%
  z-index: $zIndexSiteHeader
  background: rgba($black, 0.75)
  height: 48px

.wrapper
  composes: newColumn from 'app/assets/stylus/common.styl'
  display: flex
  height: 100%
  flex-direction: row
  align-items: center
  justify-content: space-between

.logo
  height: 40px

.time
  composes: overlay from 'app/assets/stylus/common.styl'
  display: inline-block

.link
  composes: overlay from 'app/assets/stylus/common.styl'
  text-decoration: none
  transition: color 250ms ease-in-out

  &:hover
    color: $themeColor

.siteName
  composes: overlay from 'app/assets/stylus/common.styl'
  composes: link
  display: inline-block
  font-size: 28px

