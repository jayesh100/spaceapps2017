.article
  min-width: 80%
  padding-bottom: 20px
  margin: 10px
  background-color: #ddd
  border-radius: 10px
  border: 1px solid transparent

.header
  display: flex
  align-items: center
  justify-content: space-between
  border-bottom: 1px solid black
  background-color: #bbb
  margin-bottom: 20px
  padding-top: 20px
  padding: 0 20px
  font-size: 40px

.title
  margin: 0 auto

.sId
  color: #666

.summary
  font-size: 14px
  padding: 0 20px

.source
  display: flex
  flex-direction: row-reverse
  color: #666
  font-size: 10px
  padding: 0 20px
